<div class="blog-section">
	<div class="container">

		<div class="row">
			@foreach (var item in Model)
			{
				string url = $"/blog/{item.Alias}-{item.BlogId}.html";
				<div class="col-12 col-sm-6 col-md-4 mb-5">
					<div class="post-entry">
					<a href="@url" class="post-thumbnail"><img src="@item.Image" alt="Image" class="img-fluid"></a>
					<div class="post-content-entry">
						<h3><a href="#">@item.Description</a></h3>
						<div class="meta">
							<span>by <a href="#">@item.Detail</a></span> <span>on <a href="#">@item.CreatedDate</a></span>
							
						</div>
					</div>
				</div>
			</div>
			}
			

		</div>
	</div>
</div>
<!-- End Blog Section -->