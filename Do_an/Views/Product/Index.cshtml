@model IEnumerable<Do_an.Models.TbProduct>
<!-- Start Hero Section -->

<!-- End Hero Section -->
<div class="untree_co-section product-section before-footer-section">
	<div class="container">
		<div class="row">
			@foreach (var items in Model)
			{
				string sUrl = $"/product/{items.Alias}-{items.ProductId}.html";
				<!-- Start Column 1 -->
				<div class="col-12 col-md-4 col-lg-3 mb-5">
					<a href="@sUrl"  class="product-item">
					<img  src="@items.Image" class="img-fluid product-thumbnail">
					<h3 class="product-title">@items.Title</h3>
					<strong class="product-price">$@items.Price.00</strong>
					</a>
					
					<span class="icon-cross">
							<img src="images/cross.svg" class="img-fluid">
					</span>
			 
			</div>
			}
			<!-- End Column 1 -->
			
			<!-- End Column 4 -->

		</div>
	</div>
</div>