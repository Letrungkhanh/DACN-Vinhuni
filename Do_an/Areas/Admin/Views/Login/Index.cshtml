@using Do_an.Utilities;
@model Do_an.Areas.Admin.Models.AdminUser;
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f0f4f8;
        }

        .login-card {
            max-width: 400px;
            margin: auto;
            margin-top: 80px;
            padding: 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #007bff;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <h3 class="text-center mb-4">Đăng nhập</h3>

        <form asp-controller="Login" asp-action="Index" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" id="email" placeholder="Nhập email" required>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="remember" name="RememberMe">
                <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>

        <hr class="my-4">

        <div class="text-center">
            <p>Hoặc đăng nhập bằng</p>
            <div class="d-flex justify-content-center gap-2">
                <a href="#" class="btn btn-outline-primary btn-sm"><i class="fab fa-facebook-f"></i> Facebook</a>
                <a href="#" class="btn btn-outline-danger btn-sm"><i class="fab fa-google"></i> Google</a>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="#">Quên mật khẩu?</a><br>
            <a asp-action="">Đăng ký tài khoản mới</a>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
